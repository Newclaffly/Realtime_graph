
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&amp;display=swap" rel="stylesheet">
    <title>@ViewBag.Title Score Vote SF</title>
    <script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables-1.10.22/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/DataTables-1.10.22/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript" src="~/Scripts/respond.js"></script>
    <script type="text/javascript" src="~/Scripts/Canvas/canvasjs.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>*@
    <script type="text/javascript" src="~/Scripts/Chart.min.js"></script>

    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Scripts/DataTables-1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css">

    <link href="~/Scripts/custom.css" rel="stylesheet" type="text/css">
</head>
<body style="background-image:url('space2.jpg');">

    <div class="container-fluid" id="content">
        <a class="btn btn-primary" href="@Url.Action("ChartJs", "Home")">Score</a>
        <div class="row justify-content-md-center">
            <div class="col-12 text-center md-auto">
                <h1 style="font-size:3rem;color:#ffffff"><img width="150" src="/Common/Vote_graph/fonts/SFSDTLogo.png">Booth Vote Score Realtime</h1>
            </div>
            <div class="col-2 text-center md-auto">
                <div class="ani2"></div>
            </div>
            <div style="width:90%;height:50%">
                <div class="card">
                    <div class="card-header">
                        @*<h3 class="card-text"><i class="fa fa-file"></i>  HISTORY</h3>*@
                        <h6 class="m-0 font-weight-bold text-primary" style="font-size:26px"><strong>Ranking</strong></h6>
                    </div>
                    <div class="card-body">
                        <div class="card-title">
                        </div>
                        <div class="table-responsive">
                            <table class="table center-all table-bordered table-responsive-lg table-hover dataTable " id="report_results">
                                <thead>
                                    <tr>
                                        @*<th scope="col">No.</th>*@
                                        <th scope="col">Name Boot</th>
                                        <th scope="col">Score total</th>
                                        @*<th scope="col">MATERIAL NAME</th>*@
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            CreateHistory();
            function CreateHistory() {
                $('#report_results').DataTable({
                    "destroy": true,
                    "order": [[ 1, "desc" ]],
                    "ajax": {
                        "type": "POST",
                        url: '/Common/Vote_graph/Home/get_results',
                        "datatype": "json"
                    },
                    "columns": [
                              //{ data: "ID", "name": "MATCODE", "autoWidth": true },
                              //{ data: "Poll", "name": "Poll", "autoWidth": true },
                               { data: "No", "name": "No", "autoWidth": true },
                              { data: "Total", "name": "Total", "autoWidth": true },
                    ], // end columns
                });
            }
        });

    </script>
</body>
</html>
